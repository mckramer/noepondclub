- content_for :title, "Events"
%article
  %section
    - if notice
      %p#notice= notice
    %p
      %b Title:
      = @event.title
    %p
      %b Start at:
      = @event.start_at
    %p
      %b End at:
      = @event.end_at
    %p
      %b Allday:
      = @event.allday
    %p
      %b Where:
      = @event.where
    %p
      %b Description:
      = @event.description
    %p
      %b Category:
      = @event.category.humanize
    %ol.links
      - if member_signed_in?
        %li= link_to "Edit", edit_event_path(@event)
      %li= link_to "Back to events", events_path