- content_for :title, "Register"
- content_for :subtitle, "Create new employee account"
%article
  %section
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %table
        %thead
        %tbody
          %tr
            %th= f.label :name_first
            %td= f.text_field :name_first
          %tr
            %th= f.label :name_last
            %td= f.text_field :name_last
          %tr
            %th= f.label :email
            %td= f.email_field :email
          %tr
            %th
              = f.label :password
              = f.label :password, 'Password should be at least 8 characters and contain a mix of uppercase letters, lowercase letters, and numbers.', :class => 'hint'
            %td= f.password_field :password
          %tr
            %th= f.label :password_confirmation
            %td= f.password_field :password_confirmation
      %tfoot
      = f.submit "Register"
    = render :partial => "devise/shared/links"
