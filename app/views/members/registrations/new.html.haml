- content_for :title, "Register"
- content_for :subtitle, "Create new member web account"
%article
  %section
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %p
        = f.label :name
        = f.text_field :name
        = f.label :name, 'Display name for the member account (i.e. "The Smith Family" or "Mr. & Mrs. Smith")', :class => 'hint'
      %p
        = f.label :badge
        = f.number_field :badge, :in => 1..1000
        = f.label :badge, 'Badge number', :class => 'hint'
      %p
        = f.label :membership
        = f.select :membership, options_for_select(Member.membership_types), { :include_blank => true }
        = f.label :membership, 'Type of membership', :class => 'hint'
      %p
        = f.label :email
        = f.email_field :email
        = f.label :email, 'This is the primary email address for the member. It may be used to receive emails from the website.', :class => 'hint'
      %p
        = f.label :password
        = f.password_field :password
        = f.label :password, 'Password should be at least 8 characters and contain a mix of uppercase letters, lowercase letters, and numbers.', :class => 'hint'
      %p
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      %p= f.submit "Sign up"
    = render :partial => "devise/shared/links"
